        </recipients>
        <senderType>CurrentUser</senderType>
        <template>copado__Copado_Deployer/copado__NewApexTestResultSummary</template>
    </alerts>
    <alerts>
        <fullName>Test_results</fullName>
        <description>Test results</description>
        <protected>false</protected>
        <recipients>
            <recipient>saivenkatesh.ayyagari@blue5green.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>copado__Copado_Deployer/copado__NewApexTestResultSummary</template>
