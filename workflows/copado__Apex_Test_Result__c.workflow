    <alerts>
        <fullName>Success_email_alert</fullName>
        <description>Success email alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>bina.das@blue5green.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>saivenkatesh.ayyagari@blue5green.com</recipient>
